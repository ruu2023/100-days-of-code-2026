<%= form_with(model: memo, class: "contents") do |form| %>
  <% if memo.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(memo.errors.count, "error") %> prohibited this memo from being saved:</h2>

      <ul class="list-disc ml-6">
        <% memo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-2">
    <%= form.text_field :title, placeholder: "Title", class: "block w-full border-0 focus:ring-0 p-2 text-lg font-bold placeholder-gray-400 focus:placeholder-gray-300", data: { controller: "submit-on-enter", action: "keydown->submit-on-enter#submit" } %>
  </div>

  <div class="my-2">
    <%= form.textarea :body, rows: 3, placeholder: "Take a note...", class: "block w-full border-0 focus:ring-0 p-2 text-gray-700 placeholder-gray-400 focus:placeholder-gray-300 resize-none", data: { controller: "submit-on-enter", action: "keydown->submit-on-enter#submit" } %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
